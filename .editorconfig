[*]
charset = utf-8
tab_width = 2
indent_size = 2
indent_style = space
indent_brace_style = OTBS
quote_type = single
trim_trailing_whitespace = true
insert_final_newline = true
curly_bracket_next_line = true
spaces_around_operators = true
spaces_around_brackets = none

# Windows files
[*.bat]
end_of_line = crlf
